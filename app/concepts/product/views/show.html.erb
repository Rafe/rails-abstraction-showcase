<div class='col-md-4'>
  <h3><%= name %></h3>
  <div>
    <div>
      <img class='img-thumbnail' src='http://placehold.it/400x300'></img>
    </div>
    <div>
      <%= description %>
    </div>
    <div>Price: <%= price %> </div>
  </div>
  <%= form_for order_item do |f|%>
    <%= f.hidden_field(:product_id, value: id) %>
    <%= button_tag 'Order', class: 'btn btn-success' %>
  <% end %>
</div>
